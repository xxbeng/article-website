<div class="content-container">

    <div class="auth-container">
    {{! Display a message if one was provided. }}
    {{#if toastMessage}}
    <p>{{toastMessage}}</p>
    {{/if}}

    <h1 class="auth-title"><b>Update Account Password</b></h1>
        <form action="./updatePassword" method="POST">
            <div class="flex-col mb">
                <label for="txtPassword"><b>Password:</b></label>
                <input type="password" name="password" id="txtPassword" required>
            </div>

            <div class="flex-col mb">
                <label for="txtPassword"><b>Re-enter Password:</b></label>
                <input type="password" name="rePassword" id="txtPassword" required>
            </div>

            <div class="btn-box">
                <button type="submit">Update Password</button>
            </div>
        </form>
    </div>
</div>
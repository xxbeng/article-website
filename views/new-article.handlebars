
<div class="content-container">

<form action={{#if article}}"./edit-{{article.id}}"{{else}}"./newArticle"{{/if}} method="POST">
  <div>
    <h1><input type="text" name="title" id="title">{{article.title}}</h1> 
  </div>

  <div>
    <textarea id="my-expressjs-tinymce-app" name="content">{{article.content}}</textarea>
  </div>
  
 <div>
    <button type="submit">Submit!</button>
    <a href="./myProfile"><input type="button" value="Cancel"></a>
  </div>
</form>

</div>
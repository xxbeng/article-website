<div class="new-article-container">

<form action={{#if article}}"./edit-{{article.id}}"{{else}}"./newArticle"{{/if}} method="POST">

  {{#if article}}{{else}}<div id="newArticleHeader"><h1>Create your new post!</h1></div>{{/if}}

  <div>
    <h1 input type="text" id="tinyTitle" name="title">{{article.title}}
  </div>

  <div>
    <textarea id="tinyContent" name="content">{{article.content}}</textarea>
  </div>
  
 <div>
    <button type="submit">Submit!</button>
    <a href="./myProfile"><input type="button" value="Cancel"></a>
  </div>
</form>

</div>
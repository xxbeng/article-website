<div class="content-container">


    <div class="auth-container">
        {{! Display a message if one was provided. }}
        {{#if toastMessage}}
        <p>{{toastMessage}}</p>
        {{/if}}

        <h1 class="auth-title"><b>Log in</b></h1>
        <form action="./login" method="POST">
    
            <div class="flex-col mb">
                <label for="txtUsername"><b>Username:</b></label>
                <input type="text" name="username" id="txtUsername" required>
            </div>

            <div class="flex-col mb">
                <label for="txtPassword"><b>Password:</b></label>
                <input type="password" name="password" id="txtPassword" required>
            </div>

            <div class="btn-box">
                <button type="submit">Log in</button>
            </div>
            <br>
            <div>
                Don't have an account? <a href="./newAccount"><em><u>Create one here.</u></em></a>
            </div>

        </form>
    </div>


</div>

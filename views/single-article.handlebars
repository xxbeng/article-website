<script src="../comment.js"></script>

<div class="flex-col">
        <div class="card-body card-body-single">
            
            
            <h1 class="card-title">{{article.title}}</h1>
            <p class="card-text">{{{article.content}}} <br><br> {{article.timestamp}}</p>
        </div>
        {{#if isUserArticle}}
        <div class="article-edit"><a href="./edit?articleId={{article.id}}">Edit</a></div>
        <div class="article-delete"><a href="./delete?articleId={{article.id}}" onclick="return confirm('Are you sure you want to delete this article?')">Delete</a></div>
        {{/if}}
    
    
        <form action="./comment?articleId={{article.id}}" method="POST">
        <div id="commentSection">
            <textarea name="comment" id="tinyComment"></textarea>
        </div>

        <div>
            <button type="submit">Add Comment</button>
            {{#if toastMessage}}
            <p>{{toastMessage}}</p>
            {{/if}}
        </div>
    </form>
    
        <h1 class="text-center" >Comment</h1>
        <div id="childComment"></div>
    
    {{#if comments}}{{else}}
    <p>No comments. Be the first to post a comment!</p>
    {{/if}}

